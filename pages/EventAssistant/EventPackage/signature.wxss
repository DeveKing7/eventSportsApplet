  top:440rpx;
  left:25rpx;
}
.red-select.color_select {
  width: 90rpx;
  height: 90rpx;
  top: 420rpx;
  left: 10rpx;
}
.slide-wrapper {
  width: 250rpx;
  height: 30rpx;
  transform: rotate(90deg);
  position: absolute;
  top: 160rpx;
  left: -75rpx;
}
.drop {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: #FFF;
  position: absolute;
  left: 0rpx;
  top: -10rpx;
  box-shadow: 0px 1px 5px #888888;
}

.slide {
  width: 250rpx;
  height: 30rpx;
}
